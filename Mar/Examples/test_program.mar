# Classes
class Counter {
    func Counter (me, start, end) {
        let me.start = start
        let me.end = end
        let me.current = start
    }

    func increment (me) {
        let me.current = me.current + 1
    }
}

# Using Classes
let counter = Counter(1, 10)

while (counter.current <= counter.end)
{
    print("Current value: ", counter.current)

    counter.increment()
}
